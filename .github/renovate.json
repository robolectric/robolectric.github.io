{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekly"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "GitHub Actions",
      "matchManagers": "github-actions"
    },
    {
      "groupName": "Gradle",
      "matchManagers": "gradle",
      "sourceDirectory": "snippets"
    }
  ]
}
